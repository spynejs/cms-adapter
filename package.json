{
  "name": "@spynejs/cms-adapter",
  "version": "0.1.1",
  "description": "Local development adapter for safe, deterministic JSON persistence for the SpyneJS CMS runtime",
  "keywords": [
    "spynejs",
    "cms",
    "adapter",
    "development",
    "json",
    "registry"
  ],
  "author": "Frank Batista <frank@spynejs.com>",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spynejs/cms-adapter.git"
  },
  "main": "index.js",
  "type": "commonjs",
  "files": [
    "internal/",
    "server/views/*",
    "server/.snapshots/.gitkeep",
    "server/dom-renders",
    "server/public",
    "server/src",
    "server/views",
    "server/*.js",
    "server/*.css",
    "index.js",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "startServer": "nodemon server/index.js -e js,scss,mustache,html",
    "sass:build": "sass server/public/css/main.scss server/public/css/main.css",
    "init": "npm install && npm i -D mocha-loader --force",
    "build:tailwind": "NODE_ENV=production tailwind build -c tailwind.config.js -i src/scss/03-components/placeholder-app/placeholder-app-input.css -o src/scss/03-components/placeholder-app/placeholder-app-tailwind.css",
    "build:tailwindServer": "NODE_ENV=production npx tailwind build -c tailwind.server-config.js -i server/input.css -o server/public/css/tailwind.css",
    "test": "node --test server-tests/**/*.js"
  },
  "dependencies": {
    "chmodr": "^1.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-and-time": "^4.0.5",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "fast-json-stable-stringify": "^2.1.0",
    "flatted": "^3.3.3",
    "fs-extra": "^11.3.2",
    "get-port": "^7.1.0",
    "highlight.js": "^11.11.1",
    "jsonwebtoken": "^9.0.2",
    "mustache-express": "^1.3.2",
    "prettier": "^3.6.2",
    "ramda": "^0.31.3",
    "rxjs": "^7.8.2",
    "string.prototype.matchall": "^4.0.12",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "body-parser": "^2.2.0",
    "chai": "^6.2.0",
    "chai-dom": "^1.12.1",
    "clean-webpack-plugin": "^4.0.0",
    "constants-browserify": "^1.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.4",
    "karma": "^6.4.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^5.0.1",
    "mini-css-extract-plugin": "^2.9.4",
    "mocha": "^11.7.2",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "roarr": "^7.21.1",
    "sass": "^1.93.2",
    "sass-loader": "^16.0.5",
    "sinon": "^21.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "tw-elements": "^2.0.0"
  },
  "bugs": {
    "url": "https://github.com/spynejs/cms-adapter/issues"
  },
  "homepage": "https://spynejs.com",
  "directories": {
    "lib": "lib"
  }
}
